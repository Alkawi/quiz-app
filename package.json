{
  "name": "quiz-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "js:check": "npx eslint ./js",
    "js:fix": "npx eslint ./js --fix",
    "css:check": "npx stylelint **/*.css",
    "css:fix": "npx stylelint **/*.css --fix",
    "html:check": "npx htmlhint **/*.html",
    "prettier:check": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "test": "run-p html:check css:check prettier:check js:check",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.css": "npm run css:fix",
    "**/*.js": "npm run js:fix",
    "**/*": "npm run prettier:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alkawi/quiz-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alkawi/quiz-app/issues"
  },
  "homepage": "https://github.com/Alkawi/quiz-app#readme",
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "htmlhint": "0.15.2",
    "husky": "7.0.2",
    "lint-staged": "11.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0"
  }
}
